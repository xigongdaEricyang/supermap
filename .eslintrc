{
  "parser": "babel-eslint",
  "extends": [
    "plugin:react/recommended"
  ],
  "rules": {
    "no-undef": [0],
    "no-console": [0],
    "camelcase": [0],
    "babel/new-cap": [0],
    "dot-notation": [0],
    "quotes": [2, "single"],
    "indent": [0],
    "max-len": ["error", { "code": 110 }]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 6
  },
  "env": {
    "es6": true
  }
}
